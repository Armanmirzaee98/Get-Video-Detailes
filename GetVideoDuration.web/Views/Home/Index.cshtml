
<div class="container" style="margin:25px 0px;">
    <div class="row" style="margin:100px auto;">
        <div class="col-12 col-md-12">
            <h1 class="text-primary" style="text-align:center;">Get Your Video Duration</h1>
        </div>
        <div class="col-12 col-md-4" style="margin:25px auto;padding:10px;box-shadow:0px 0px 10px -4px;border-radius:8px;">
            <form method="post" asp-controller="Home" asp-action="GetDuration" enctype="multipart/form-data">
                @if (ViewData["Duration-file"] != null)
                {
                    <div class="alert alert-success">
                        <p>Duration : @ViewData["Duration-file"]</p>
                        <p>Size : ~@ViewData["File Size"] Mb</p>
                        <p>Format : @ViewData["File Format"]</p>
                    </div>
                }
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <label class="form-label" for="file">File</label>
                <input type="file" name="file" class="form-control" />
                <hr />
                <input type="submit" class="btn btn-primary" value="Get Duration" />
            </form>
        </div>
    </div>
</div>